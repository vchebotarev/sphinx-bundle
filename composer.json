{
    "name":        "chebur/sphinx-bundle",
    "type":        "symfony-bundle",
    "description": "Symfony sphinx bundle with SphinxClient(sphinxapi), SphinxQL, commands, profiling",
    "keywords": [
        "sphinx",
        "sphinxsearch",
        "symfony",
        "symfony3",
        "symfony4",
        "bundle",
        "sphinxapi",
        "sphinxclient",
        "sphinxql"
    ],
    "homepage": "https://github.com/vchebotarev",
    "license":  "MIT",
    "authors": [
        {
            "name":     "Vladimir Chebotarev",
            "homepage": "http://github.com/vchebotarev",
            "email":    "v.yu.chebotarev@mail.ru"
        }
    ],
    "autoload": {
        "psr-4": { "Chebur\\SphinxBundle\\": "" }
    },
    "require": {
        "php": "^7.1",

        "foolz/sphinxql-query-builder": "^2.0",
        "symfony/console":              "^3.4",
        "symfony/framework-bundle":     "^3.4",
        "symfony/process":              "^3.4",
        "twig/twig":                    "^1.35 || ^2.4.4"
    },
    "require-dev": {
        "symfony/stopwatch": "^3.4"
    }
}
